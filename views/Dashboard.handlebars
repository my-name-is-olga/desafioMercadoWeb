<script>
  $(document).ready(function(){
//crea variable para imágenes clicadas
  let clickedImages = [];
    //obtiene info de la card a través del evento clic
    $(".card").click(function(event){
      //verifica clic del botón
      if(!$(this).prop("disabled")){
        //obtiene imagen y string
        let imgSrc=$(this).find("img").attr("src");
    //verifica si se ha clicado la imagen       
if(!clickedImages.includes(imgSrc)) {
  //agrega la imagen clicada
 clickedImages.push(imgSrc);
        //crea elemento con la imagen y lo incluye en el modal
        let imgElement=$("<img>").attr("src",imgSrc);
        $("#productosContainer").append(imgElement);
}
        $(this).prop("disabled",true);
      }
    });
  });
</script>

